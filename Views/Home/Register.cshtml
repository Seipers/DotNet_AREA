@using Area.Models
@{
    ViewData["Title"] = "Register";
    var error = ViewData["ErrorReg"] as List<ErrorLog>;
}

@model Area.Models.FormRegister

<head>
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.13.1/jquery.validate.min.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
<meta charset="utf-8" />
<link rel="stylesheet" href="~/css/login.css">

<title></title>
</head>
<body>
    @foreach (var x in error)
    {
        @if (x.enabl == true)
        {
            <h5><font color="red">@x.message</font></h5>
        }
    }

<!-- REGISTRATION FORM -->
<div class="text-center" style="padding:50px 0">
	<div class="logo">register</div>
	<!-- Main Form -->
	<div class="login-form-1">
        <form name="Index" asp-controller="Home" method="POST" id="register-form" class="text-left">  
			<div class="login-form-main-message"></div>
			<div class="main-login-form">
				<div class="login-group">
					<div class="form-group">
						<label asp-for="username" for="reg_username" class="sr-only">Username</label>
						<input type="username" name="username" placeholder="Username" class="form-control" id="reg_username">
					</div>
					<div class="form-group">
						<label asp-for="password" for="reg_password" class="sr-only">Password</label>
						<input type="password" name="password" placeholder="Password" class="form-control" id="reg_password">
					</div>
					<div class="form-group">
						<label asp-for="confirmation" for="reg_password_confirm" class="sr-only">Password Confirm</label>
						<input type="password" class="form-control" id="reg_password_confirm" name="confirmation" placeholder="Confirm password">
					</div>
					
					<div class="form-group">
						<label asp-for="email" for="reg_email" class="sr-only">Email</label>
						<input type="email" name="email" placeholder="user@example.org" class="form-control" id="reg_email">
					</div>
				</div>
				<button type="submit" class="login-button"><i class="fa fa-chevron-right" value="Register"></i></button>
			</div>
			<div class="etc-login-form">
				<p>already have an account? <a href="/Home/Login">login here</a></p>
			</div>
		</form>
	</div>
	<!-- end:Main Form -->
</div>

<script  src="~/js/login.js"></script>

</body>